<h2>Books</h2>

<div class="table">
 <div class="thead">
    <p class="title">Title</p>
    <p class="body">Body</p>
 </div>


 <% @books.each do |book| %>
  
  <div class="tbody">
   <span class="btitle"><%= book.title %></span>
   <span class="bbody"><%= book.body %></span>
   <div class="link">
    <span>
     <%= link_to 'Show', book_path(book.id), method: :get %>
    </span>

    <span>
     <%= link_to 'Edit', edit_book_path(book.id), method: :get %>
    </span>

    <span>
     <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </span>
    
   </div>
  
  </div> 

 <% end %>

</div>






<h3>New book</h3>
<% if @book.errors.any? %>
 <%= @book.errors.count %><a>errors prohibited this book from being saved:</a>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
 </ul>
<% end %>
 
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<h4>Title</h4>
 <%= f.text_field :title %>
 
<h4>Body</h4>
 <%= f.text_area :body %>
<div class="actions">
 <%= f.submit "Create Book" %>
 </div>
 
<% end %>