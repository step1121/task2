<div class="edit">
 <h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <%= @book.errors.count %><a>errors prohibited this book from being saved:</a>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
 <% end %>
 
 <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Body</h4>
   <%= f.text_field :body %>

  <div class="actions">
   <%= f.submit 'Update Book' %>
  </div>

 <% end %>
   
  <div class="link-list">
   <span class="link"><%= link_to "Show", book_path(@book.id), method: :get %></span>
   <span><%= link_to "Back", books_path(@book.id), method: :get %></span>
  </div>
 
</div>